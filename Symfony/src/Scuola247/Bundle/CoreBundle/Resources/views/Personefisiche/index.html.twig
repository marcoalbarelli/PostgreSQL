{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Personefisiche list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nome</th>
                <th>Cognome</th>
                <th>Sesso</th>
                <th>Natoil</th>
                <th>Decedutoil</th>
                <th>Comunedinascita</th>
                <th>Codicefiscale</th>
                <th>Statocivile</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('personefisiche_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.nome }}</td>
                <td>{{ entity.cognome }}</td>
                <td>{{ entity.sesso }}</td>
                <td>{% if entity.natoil %}{{ entity.natoil|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.decedutoil %}{{ entity.decedutoil|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.comunedinascita }}</td>
                <td>{{ entity.codicefiscale }}</td>
                <td>{{ entity.statocivile }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('personefisiche_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('personefisiche_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('personefisiche_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
