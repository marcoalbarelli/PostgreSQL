<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="Scuola247\Bundle\CoreBundle\Entity\Personefisiche" table="personefisiche">
    <field name="nome" type="string" column="nome" length="60" nullable="false"/>
    <field name="cognome" type="string" column="cognome" length="60" nullable="false"/>
    <field name="sesso" type="string" column="sesso" nullable="false"/>
    <field name="natoil" type="date" column="natoil" nullable="true"/>
    <field name="decedutoil" type="date" column="decedutoil" nullable="true"/>
    <field name="comunedinascita" type="string" column="comunedinascita" length="60" nullable="true"/>
    <field name="codicefiscale" type="string" column="codicefiscale" nullable="true"/>
    <field name="statocivile" type="string" column="statocivile" nullable="true"/>
    <one-to-one field="personafisica" target-entity="Soggetti">
      <join-columns>
        <join-column name="personafisica" referenced-column-name="soggetto"/>
      </join-columns>
    </one-to-one>
    <many-to-one field="tutore" target-entity="Personefisiche">
      <join-columns>
        <join-column name="tutore" referenced-column-name="personafisica"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="padre" target-entity="Personefisiche">
      <join-columns>
        <join-column name="padre" referenced-column-name="personafisica"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="nazionedinascita" target-entity="Nazioni">
      <join-columns>
        <join-column name="nazionedinascita" referenced-column-name="nazione"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="madre" target-entity="Personefisiche">
      <join-columns>
        <join-column name="madre" referenced-column-name="personafisica"/>
      </join-columns>
    </many-to-one>
  </entity>
</doctrine-mapping>
